<%= render "shared/banner" %>

<div>
  <h1 class="titles">Last cards added</h1>
</div>
<p>Olha os cardzinho maroto do papai</p>

<div class="card-deck">
  <% @last_cards.each do |card| %>
    <div class="card">
      <%= cl_image_tag card.photo.key, crop: :fill, class: "card-photo" %>
      <div class="card-body">
        <h1 class="card-title"><%= card.name %></h1>
          <p class="card-text"><strong>Category: </strong><%= card.category %></p>
          <p class="card-text"><strong>Price:</strong> <%= card.price %></p>
        <%= link_to "See Card's details", card_path(card), class: "card-button card-home-button-position" %>
      </div>
    </div>
  <% end %>
</div>
