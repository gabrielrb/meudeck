<h1 class="mt-4">Show</h1>

<br>

  <div class="order-card d-flex justify-content-center">
    <div class="card-left">
      <%= cl_image_tag @card.photo.key, crop: :fill %>
    </div>
    <div class ="card-right">
      <h1><%= @card.name %></h1>
      <p><%= @card.category %></p>
      <p><%= @card.description %></p>
      <p><%= @card.price %></p>
      <p><%= @card.user.username %></p>
    </div>
  </div>

<% if current_user == @card.user %>
  <p><%= link_to "Edit card", edit_card_path %></p>
  <p><%= link_to "DELETE CARD", card_path(@card), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  <p><%= link_to "Back to cards", cards_path %></p>
<% elsif current_user == nil %>
  <p><%= link_to "Back to cards", cards_path %></p>
<% else %>
  <%= simple_form_for [@card, @order] do |f| %>
    <p><%= f.submit 'Buy!', class: 'btn-primary' %></p>
    <p><%= link_to "Back to cards", cards_path %></p>
  <% end %>
<% end %>


